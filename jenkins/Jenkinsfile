pipeline {
    agent any

    environment {
        AWS_SERVER_IP = credentials('aws-server-ip')
        DO_SERVER_IP = credentials('do-server-ip')
        DO_API_TOKEN = credentials('do-credentials-id')
    }

    stages {
        stage('Setup Environment') {
            parallel {
                stage('Prepare AWS Server') {
                    steps {
                        sshagent(['aws-ssh-key']) {
                            sh '''
                            ssh ec2-user@$AWS_SERVER_IP << EOF
                            if ! command -v docker &> /dev/null; then
                                sudo yum install -y docker
                                sudo systemctl start docker
                                sudo curl -L "https://github.com/docker/compose/releases/latest/download/docker-compose-$(uname -s)-$(uname -m)" -o /usr/local/bin/docker-compose
                                sudo chmod +x /usr/local/bin/docker-compose
                            fi
                            mkdir -p ~/deploy
                            EOF
                            '''
                        }
                    }
                }
                stage('Prepare DigitalOcean Server') {
                    steps {
                        sshagent(['do-ssh-key']) {
                            sh '''
                            ssh root@$DO_SERVER_IP << EOF
                            if ! command -v docker &> /dev/null; then
                                curl -fsSL https://get.docker.com | sh
                                sudo chmod 666 /var/run/docker.sock
                            fi
                            mkdir -p /root/deploy
                            EOF
                            '''
                        }
                    }
                }
            }
        }

        stage('Deploy Application') {
            steps {
                parallel {
                    stage('Deploy to AWS') {
                        sshagent(['aws-ssh-key']) {
                            sh '''
                            ssh ec2-user@$AWS_SERVER_IP << EOF
                            cd ~/deploy
                            docker-compose pull
                            docker-compose up -d
                            EOF
                            '''
                        }
                    }
                    stage('Deploy to DigitalOcean') {
                        sshagent(['do-ssh-key']) {
                            sh '''
                            ssh root@$DO_SERVER_IP << EOF
                            cd /root/deploy
                            docker-compose pull
                            docker-compose up -d
                            EOF
                            '''
                        }
                    }
                }
            }
        }

        stage('Verify Deployment') {
            steps {
                parallel {
                    stage('Verify AWS') {
                        sh 'curl -s http://$AWS_SERVER_IP:5000'
                    }
                    stage('Verify DigitalOcean') {
                        sh 'curl -s http://$DO_SERVER_IP:5000'
                    }
                }
            }
        }
    }
}
